<div class="row">
  <div class="form-group">
    <h1>Sign Up Confirmation</h1>
    <h4>Are you sure these values are correct?</h4>
  </div>
  <div class="form-group">
    <%= "Email: #{@user.email}" %>
  </div>
  <div class="form-group">
    <%= "Name: #{@user.name}" %>
  </div>
  <div class="form-group">
    <div class="col-sm-1">
      <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
    </div>
    <div class="col-sm-1">
      <%= link_to "No", new_user_path, class: 'btn btn-warning' %>
    </div>
  </div>
</div>
